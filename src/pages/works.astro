---
import { featured, projects } from '../data/projects';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
	title="Projects — Arctica Digital"
	description="Selected projects by Itai Ben Zeev — SaaS platforms, web development, e-commerce, and AI integration."
>
	<Header slot="header" />

	<section class="works-hero">
		<div class="container">
			<h1 class="works-title">
				<span class="hero-line">Projects I've</span>
				<span class="hero-line"
					><span class="text-outline">built &</span></span
				>
				<span class="hero-line"
					><span class="gradient-text">shipped.</span></span
				>
			</h1>
			<p class="works-intro reveal-up">
				From AI-powered SaaS platforms to conversion-optimised
				e-commerce — every project here was personally architected,
				developed, and deployed by me.
			</p>
		</div>
	</section>

	<!-- FEATURED: EVENTIMIO -->
	<section class="section section--dark featured-section">
		<div class="container">
			<div class="featured-work reveal-up">
				<div class="featured-head">
					<span class="featured-badge">My Own Product</span>
					<div class="featured-meta">
						<span>{featured.category}</span><span
							>{featured.year}</span
						>
					</div>
				</div>
				<h2 class="featured-name">{featured.title}</h2>
				<div class="featured-body">
					<div class="featured-left">
						<p class="featured-desc">{featured.description}</p>
						<p class="featured-result">
							<strong>Result:</strong>
							{featured.result}
						</p>
					</div>
					<div class="featured-right">
						<span class="feat-tag-label">Tech Stack</span>
						<div class="featured-tags">
							{
								featured.services.map((s) => (
									<span class="feat-tag">{s}</span>
								))
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- CLIENT PROJECTS -->
	<section class="section">
		<div class="container">
			<span class="section-number reveal-up">Client Projects</span>
			<div class="works-list">
				{
					projects.map((p) => (
						<article class="work-item reveal-up">
							<div class="work-image">
								<img
									src={p.image}
									alt={p.title}
									loading="lazy"
									class=""
								/>
								<div class="work-image-overlay">
									<span class="work-view-label">
										View Details
									</span>
								</div>
							</div>
							<div class="work-content">
								<div class="work-meta">
									<>
										<span class="work-cat">
											{p.category}
										</span>
										<span class="work-year">{p.year}</span>
									</>
								</div>
								<h2 class="work-title">{p.title}</h2>
								<p class="work-desc">{p.description}</p>
								<p class="work-result">
									<strong>Result:</strong> {p.result}
								</p>
								<div class="work-tags">
									{p.services.map((s) => (
										<span class="work-tag">{s}</span>
									))}
								</div>
							</div>
						</article>
					))
				}
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</BaseLayout>
