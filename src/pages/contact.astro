---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const interests = [
  'SaaS Platform',
  'Web Application',
  'AI Integration',
  'WordPress / E-Commerce',
  'Ongoing Partnership',
];
const budgets = ['$3K – $8K', '$8K – $15K', '$15K – $30K', '$30K+'];
---

<BaseLayout title="Contact — Arctica Digital">
	<Header slot="header" />

	<section class="contact-page">
		<div class="container">
			<div class="contact-grid">
				<div class="contact-intro reveal-up">
					<span class="section-label">Let's talk</span>
					<h1 class="contact-title">
						<span>Tell me about</span>
						<span
							>your <span class="gradient-text">project.</span
							></span
						>
					</h1>
					<p class="contact-sub">
						I'll give you my honest assessment — what I can help
						with, what timeline looks realistic, and whether I'm the
						right fit. No sales pitch, just a straight conversation
						between two people who want to build something great.
					</p>
					<div class="contact-cards">
						<div class="c-card">
							<span class="c-icon"
								><svg
									width="18"
									height="18"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="1.5"
									aria-hidden="true"
									><rect
										x="2"
										y="4"
										width="20"
										height="16"
										rx="2"></rect><path
										d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"
									></path></svg
								></span
							>
							<div>
								<span class="c-label">Email</span><a
									href="mailto:hello@arctica.digital"
									>hello@arctica.digital</a
								>
							</div>
						</div>
						<div class="c-card">
							<span class="c-icon"
								><svg
									width="18"
									height="18"
									viewBox="0 0 24 24"
									fill="none"
									stroke="currentColor"
									stroke-width="1.5"
									aria-hidden="true"
									><path
										d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"
									></path><rect
										x="2"
										y="9"
										width="4"
										height="12"></rect><circle
										cx="4"
										cy="4"
										r="2"></circle></svg
								></span
							>
							<div>
								<span class="c-label">LinkedIn</span><a
									href="https://www.linkedin.com/in/itai-ben-zeev-ar/"
									target="_blank"
									rel="noopener noreferrer">Itai Ben Zeev ↗</a
								>
							</div>
						</div>
					</div>
					<div class="contact-note">
						<p>
							<strong>Response time:</strong> I typically reply within
							24 hours. For urgent projects, mention it in the form
							and I'll prioritise.
						</p>
					</div>
				</div>

				<form
					class="contact-form reveal-up"
					id="contact-form"
					novalidate
				>
					<fieldset class="fsec">
						<legend class="fl">I'm interested in…</legend>
						<div class="chip-group">
							{
								interests.map((i) => (
									<label class="chip">
										<>
											<input
												type="checkbox"
												name="interest"
												value={i}
											/>
											<span>{i}</span>
										</>
									</label>
								))
							}
						</div>
					</fieldset>
					<div class="frow">
						<div class="fg">
							<label class="fl" for="name"
								>Name <span class="req" aria-hidden="true">*</span><span class="sr-only">(required)</span></label
							><input
								type="text"
								id="name"
								name="name"
								required
								aria-required="true"
								aria-describedby="name-error"
								maxlength="100"
								placeholder="Your name"
							/>
							<span class="field-error" id="name-error" aria-live="polite" role="alert"></span>
						</div><div class="fg">
							<label class="fl" for="company">Company</label
							><input
								type="text"
								id="company"
								name="company"
								maxlength="100"
								placeholder="Company name"
							/>
						</div>
					</div>
					<div class="fg">
						<label class="fl" for="email"
							>Email <span class="req" aria-hidden="true">*</span><span class="sr-only">(required)</span></label
						><input
							type="email"
							id="email"
							name="email"
							required
							aria-required="true"
							aria-describedby="email-error"
							maxlength="254"
							placeholder="your@email.com"
						/>
						<span class="field-error" id="email-error" aria-live="polite" role="alert"></span>
					</div>
					<div class="fg">
						<label class="fl" for="message">Project details</label
						><textarea
							id="message"
							name="message"
							rows="4"
							maxlength="2000"
							placeholder="What are you building? What problems are you solving? What's the timeline?"
						></textarea>
					</div>
					<fieldset class="fsec">
						<legend class="fl">Budget range (USD)</legend>
						<div class="chip-group">
							{
								budgets.map((b) => (
									<label class="chip">
										<>
											<input
												type="radio"
												name="budget"
												value={b}
											/>
											<span>{b}</span>
										</>
									</label>
								))
							}
						</div>
					</fieldset>

					<!-- Honeypot — hidden from humans, catches bots -->
					<div class="hp-field" aria-hidden="true">
						<label for="website">Website</label>
						<input
							type="text"
							id="website"
							name="website"
							tabindex="-1"
							autocomplete="off"
						/>
					</div>

					<button
						type="submit"
						class="btn btn--primary sbtn"
						id="submit-btn"
						><span>Send it over</span>
						<svg
							width="14"
							height="14"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							aria-hidden="true"
							><line x1="7" y1="17" x2="17" y2="7"
							></line><polyline points="7 7 17 7 17 17"
							></polyline></svg
						></button
					>

					<a
						href="https://www.linkedin.com/in/itai-ben-zeev-ar/"
						target="_blank"
						rel="noopener noreferrer"
						class="btn btn--secondary sbtn linkedin-cta"
					>
						<span>Or message me on LinkedIn</span>
						<svg
							width="14"
							height="14"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							aria-hidden="true"
						>
							<path
								d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z"
							></path>
							<rect x="2" y="9" width="4" height="12"></rect>
							<circle cx="4" cy="4" r="2"></circle>
						</svg>
					</a>
				</form>

				<!-- Success state -->
				<div class="form-success" id="form-success" hidden role="status" aria-live="polite">
					<div class="success-icon" aria-hidden="true">✓</div>
					<h2>Message sent!</h2>
					<p>
						Thanks for reaching out. I'll get back to you within 24
						hours.
					</p>
				</div>

				<!-- Error state -->
				<div class="form-error" id="form-error" hidden role="alert" aria-live="assertive">
					<p>
						Something went wrong. Please try again or <a
							href="mailto:hello@arctica.digital"
							>email me directly</a
						>.
					</p>
				</div>
			</div>
		</div>
	</section>

	<Footer slot="footer" />
</BaseLayout>

<script src="../scripts/contact-form.ts"></script>
